{
    "prefer-stable": true,
    "minimum-stability": "dev",
    "scripts": {
        "post-install-cmd": [
             "./vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
        ],
        "post-update-cmd": [
            "@post-install-cmd"
        ]
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "dev-develop",
        "phpmd/phpmd": "^2.13"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    }
}
